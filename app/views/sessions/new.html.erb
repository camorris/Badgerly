<h1>Sign In...You Got Nothing Better to do</h1>
<%= form_tag sessions_path, {:class => ''} do %>

<div class="form-group">
<%= label_tag :email, 'Email', class: '' %>
<%= text_field_tag :email, params[:email], class: 'form-control' %>
</div>
<div class="form-group">
<%= label_tag :password, 'Password', class: '' %>
<%= password_field_tag :password, nil, class: 'form-control' %>
</div>

<%= submit_tag 'Log in', class: 'btn btn-warning' %>
<%= link_to "Don't have an account?", new_user_path, class: '' %>
<% end %>





