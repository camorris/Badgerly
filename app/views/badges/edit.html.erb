<h1>Badge</h1>
<%= form_for @badge do |f| %>
<%= f.text_field :course, {placeholder: "Course"} %>
<br />
<%= f.text_area :website, {placeholder: "Website"} %>
<br />
<%= f.text_field :date, {placeholder: "Date"} %>
<br />
<%= f.text_field :purpose, {placeholder: "Purpose"} %>
<br />
<%= f.submit %>
<% end %>
<%= link_to 'Cancel', badge_path %>
<%= link_to 'Delete', badge_path, method: 'delete', data: {confirm: "Are You Sure You Want to do that?"} %>